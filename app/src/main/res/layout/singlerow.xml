<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:elevation="0dp"
    android:id="@+id/carde"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    tools:targetApi="lollipop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/week_btn"
            android:layout_width="71dp"
            android:layout_height="74dp"
            android:background="#FFFFFF"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_folder_24" />

        <EditText
            android:id="@+id/weeknum_edit"
            android:fontFamily="@font/castoro"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_alignTop="@+id/week_btn"
            android:layout_alignBottom="@+id/week_btn"
            android:layout_toEndOf="@+id/week_btn"
            android:layout_toRightOf="@+id/week_btn"
            android:editable="false"
            android:ellipsize="middle"
            android:ems="10"
            android:foregroundGravity="center"
            android:freezesText="true"
            android:gravity="center|center_horizontal|left"
            android:inputType="none"
            android:text="hahhaha"
            android:textColorLink="#2E2EB8"
            android:textIsSelectable="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toEndOf="@+id/week_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>