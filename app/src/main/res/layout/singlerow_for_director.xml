<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardCornerRadius="3dp"
    android:elevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView13"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/dir_person_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.875"
                app:srcCompat="@drawable/ic_baseline_person_24"
                tools:targetApi="lollipop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dir_person_email"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/week_btn"
            android:layout_alignBottom="@+id/week_btn"
            android:layout_toEndOf="@+id/week_btn1"
            android:layout_toRightOf="@+id/week_btn1"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:freezesText="true"
            android:gravity="center"
            android:text="abc"

            android:textColor="#2E2EB8"
            android:textColorLink="#2E2EB8"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/cardView13"
            app:layout_constraintTop_toBottomOf="@+id/dir_person_name" />

        <TextView
            android:id="@+id/dir_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="1dp"
            android:fontFamily="@font/castoro"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView13"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>