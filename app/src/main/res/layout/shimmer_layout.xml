<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_for_weekcontent"
    android:background="#FFFFFF"
    android:elevation="2dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/week_content_img"
            android:layout_width="71dp"
            android:layout_height="74dp"
            app:circularflow_radiusInDP="500dp"
            app:layout_constraintCircleRadius="500dp"
            android:background="@color/shimmer"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/week_content_url"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:autoLink="none"
            android:background="@color/shimmer"
            android:ems="10"
            android:freezesText="true"
            android:gravity="center|center_horizontal|left|center_vertical"
            android:inputType="none|textPersonName"
            android:linksClickable="true"
            android:textColor="#2E2EB8"
            android:textColorLink="#2E2EB8"
            android:textIsSelectable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/week_content_img"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/week_content_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/shimmer"
            android:fontFamily="@font/castoro"
            android:text=""

            android:textColor="#000000"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>