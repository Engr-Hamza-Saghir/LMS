<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carde"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#AA8282"
    android:elevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/week_btn1"
            style="@android:style/Widget.Material.ImageButton"
            android:layout_width="71dp"
            android:layout_height="74dp"
            android:background="#FFFFFF"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_folder_24"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
            tools:targetApi="lollipop" />

        <EditText
            android:id="@+id/weeknum_edit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:layout_alignTop="@+id/week_btn"
            android:layout_toEndOf="@+id/week_btn1"
            android:layout_toRightOf="@+id/week_btn1"
            android:ems="10"
            android:freezesText="true"
            android:gravity="left"
            android:inputType="none|textPersonName"
            android:text="WEEK-1(March 7 - March 14)"
            android:textColorLink="#2E2EB8"
            android:textIsSelectable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/week_btn1"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>